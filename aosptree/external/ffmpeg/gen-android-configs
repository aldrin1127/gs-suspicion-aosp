#!/bin/bash
#
# Generate configurations for various FFMPEG targets
TARGETS="aarch64 x86_64"
TOOLS_BASE="$ANDROID_NDK_HOME/toolchains/llvm/prebuilt/linux-x86_64/bin"

BASE_CONFIG=" \
  --disable-autodetect       \
  --disable-debug            \
  --disable-decoders         \
  --disable-demuxers         \
  --disable-devices          \
  --disable-doc              \
  --disable-programs         \
  --disable-random           \
  --disable-rpath            \
  --disable-static           \
  --disable-symver           \
  --enable-gpl               \
  --enable-version3          \
  --enable-nonfree           \
  --enable-extra-warnings    \
  --enable-grey              \
  --enable-jni               \
  --enable-ossfuzz           \
  --enable-optimizations     \
  --enable-linux-perf        \
  --enable-lto               \
  --enable-pic               \
  --enable-runtime-cpudetect \
  --enable-shared            \
  --enable-stripping         \
  --enable-cross-compile     \
  --target-os=android        \
  --nm=${TOOLS_BASE}/llvm-nm \
  --strip=${TOOLS_BASE}/llvm-strip \
  --ar=${TOOLS_BASE}/llvm-ar \
  --ranlib=${TOOLS_BASE}/llvm-ranlib \
  --x86asmexe=${TOOLS_BASE}/yasm
"
